source 'https://rubygems.org'

gem 'rake'
gem 'motion-cocoapods'
gem 'bubble-wrap'

# layouts and handy util methods
gem 'teacup'
gem 'sugarcube'

# data handling and easy forms
gem 'cdq'
gem 'formotion'

# Internationalisation
gem 'motion-i18n'
gem "i18n_tools", :require => "i18n_tools/tasks"
gem 'motion-support'
gem 'motion-resource'

# Observing the ruby way
gem 'rubymotion-observer'

# beta testers
gem 'motion-hockeyapp'

group :development do
  gem 'guard-test', require: false
  gem 'motion-redgreen'
  gem 'rb-fsevent', :require => false
  gem 'motion-calabash', require: false
  gem 'motion-stump'
end